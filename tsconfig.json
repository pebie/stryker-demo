{
  "compilerOptions": {
    "incremental": true,
    "outDir": "./build",
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "lib": ["es6"],
    "alwaysStrict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "noImplicitThis": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["./node_modules"],
  "include": ["./src/**/*.ts"]
}
